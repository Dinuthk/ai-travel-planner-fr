pipeline {
    agent any 
    
    stages { 
        stage('SCM Checkout') {
            steps {
                retry(3) {
                    git branch: 'development', url: 'https://github.com/Dinuthk/ai-travel-planner-fr'
                }
            }
        }
        stage('Build Docker Image') {
            steps {  
                bat 'docker build -t dinuth324/ai-travel-fr:%BUILD_NUMBER% .'
            }
        }
        stage('Login to Docker Hub') {
            steps {
                bat "docker login -u dinuth324 -p Abm4699#TT"
            }
        }
        stage('Push Image') {
            steps {
                bat 'docker push dinuth324/ai-travel-fr:%BUILD_NUMBER%'
            }
        }
        stage('Deploy to App Server') {
    steps {
        script {
            sshagent(['dockerhub-cred']) { // Add SSH credentials in Jenkins
                bat "ansible-playbook -i inventory deploy.yml --extra-vars \"build_number=%BUILD_NUMBER%\""
            }
        }
    }
}
    }
    post {
        always {
            bat 'docker logout'
        }
    }
}
